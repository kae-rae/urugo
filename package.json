{
  "name": "homematch-monorepo",
  "private": true,
  "workspaces": [
    "apps/*"
  ],
  "engines": {
    "node": ">=20.11.0"
  },
  "scripts": {
    "dev": "concurrently \"npm:dev:web\" \"npm:dev:api\"",
    "dev:web": "npm --workspace apps/web run dev",
    "dev:api": "npm --workspace apps/api run start:dev",
    "build": "npm -w apps/web run build && npm -w apps/api run build",
    "test": "npm run test:web && npm run test:api",
    "test:web": "jest --projects tests/jest.web.config.cjs",
    "test:api": "jest --projects tests/jest.api.config.cjs"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@types/node": "^20.11.25",
    "@types/react": "^18.3.7",
    "@types/react-dom": "^18.3.0",
    "concurrently": "^9.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.1.1",
  "supertest": "^7.1.3",
  "@types/supertest": "^2.0.12",
  "@types/jest": "^29.5.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "prom-client": "^15.1.3"
  }
  ,
  "overrides": {
    "@nestjs/common": "^11.1.8",
    "@nestjs/core": "^11.1.8",
    "@nestjs/platform-express": "^11.1.8"
  }
}
